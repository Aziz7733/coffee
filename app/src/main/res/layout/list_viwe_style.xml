<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="20dp"
    android:orientation="horizontal"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:id="@+id/imgVFavorite"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/favo"
        android:contentDescription="@string/empty"
        android:layout_margin="@dimen/loginViewsMargin"/>


    <TextView
        android:id="@+id/txtCoffees"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="@string/tv_definition"
        android:textAlignment="center"
        android:textColor="#6F4E37"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="@dimen/loginViewsMargin"
        />
    <TextView
        android:id="@+id/txtCoffeeLat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_definition"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/txtCoffeeLon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_definition"
        android:visibility="invisible"/>
</LinearLayout>